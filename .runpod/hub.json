{
  "title": "Runpod Worker Inflect",
  "description": "A serverless Inflect Worker for Runpod",
  "type": "serverless",
  "category": "language",
  "iconUrl": "https://avatars.githubusercontent.com/u/213868091?s=48&v=4",
  "config": {
    "runsOn": "GPU",
    "gpuCount": 1,
    "gpuIds": "AMPERE_16,AMPERE_24,ADA_24",
    "containerDiskInGb": 20,
    "presets": [],
    "env": [
      {
        "key": "INFLECT_CONFIG_URL",
        "input": {
          "name": "inflect Config URL",
          "type": "string",
          "description": "URL of an inflect config to preload",
          "default": "",
          "advanced": false
        }
      },
      {
        "key": "INFLECT_MODEL_NAME",
        "input": {
          "name": "Model Name",
          "type": "string",
          "description": "Name of a model to preload",
          "default": "",
          "advanced": false
        }
      },
      {
        "key": "INFLECT_SYSTEM_NAME",
        "input": {
          "name": "System Name",
          "type": "string",
          "description": "Name of a system to preload",
          "default": "",
          "advanced": false
        }
      },
      {
        "key": "MAX_CONCURRENCY",
        "input": {
          "name": "Max Concurrency",
          "type": "number",
          "description": "Maximum number of concurrent requests to handle (default: 8)",
          "default": 8,
          "advanced": true
        }
      }
    ]
  }
}
